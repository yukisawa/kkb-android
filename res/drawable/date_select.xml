<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape>
            <stroke android:width="1dip" android:color="#000" />

            <solid android:color="#0000" />

            <padding android:bottom="3dip" android:top="3dip" />

            <corners android:radius="1dip" />
        </shape></item>
    <item android:state_pressed="true"><shape>
            <stroke android:width="1px" android:color="#000" />

            <gradient android:angle="270" android:centerColor="#f50" android:endColor="#Fc6" android:startColor="#fc5" />
        </shape></item>
    <item android:state_active="true"><shape>
            <stroke android:width="1px" android:color="#000" />

            <gradient android:angle="270" android:centerColor="#f50" android:endColor="#Fc6" android:startColor="#fc5" />
        </shape></item>

</selector>